{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
